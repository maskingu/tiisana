<div class="container" style="margin-top:50px;">
  <div class="container">
    <div lass="row">
      <div class="col d-flex inline">
        <% if @user.image.attached? %>
          <%= image_tag @user.image.variant(resize:'100x100').processed, class:"avatar m-4"%>
        <% else %>
          <%= image_tag ("defo.jpg"), class:"avatar m-4"%>
        <% end %>
      <% if current_user == @user %>
        <p class="h3 text-bold justify-content-center align-self-center">
        マイページ</p>
      <% else %>
        <p class="h3 text-bold justify-content-center align-self-center">
        <%= @user.nickname %>さんのページ</p>
      <% end %>
        <div class="d-flex justify-content-between align-items-center ml-5">
          <%= render 'relationships/follow_button', user: @user %>
        </div>
      </div>
      <div class="card">
      <div class="card-body">
      <h6 class="card-title">プロフィール</h6>
      <p class="card-text small"><%= @user.profile %></p>
      </div>
      </div>
      </div>
  <%= render 'stats' %>
  </div>
</div>