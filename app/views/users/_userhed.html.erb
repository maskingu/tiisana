<div class="container" style="margin-top:100px;">
<div class="container">
  <div lass="row">
    <div class="col d-flex inline">
    <% if @user.image.attached? %>
    <%= image_tag @user.image.variant(resize:'100x100').processed, class:"avatar m-4"%>
    <% else %>
    <%= image_tag ("defo.jpg"), class:"avatar m-4"%>
    <% end %>
  <p class="h3 text-bold justify-content-center align-self-center"><%= @nickname %>さんのページ</p>
    <div class="d-flex justify-content-between align-items-center ml-5">
    <%= render 'relationships/follow_button', user: @user %>
    </div>
  </div>
  <div class="col-md-6 offset-md-2">
      <span>プロフィール : <%= @user.profile %></span>
  </div>
  <%= render 'stats' %>
  </div>
</div>